<section class="hero">
    <h2>Your One-Stop Shop for Laptops and Computers</h2>
    <p>Find the best deals on the latest laptops, desktops, and accessories.</p>
    <a href="/devices/catalog" class="btn">Shop Now</a>
</section>
<section class="products">
    <h2>Featured Products</h2>
    <div class="product-grid">

        {{#each devices}}
        <article class="product-item">
            <img src="{{image}}" alt="{{brand}} {{model}}">
            <h3>{{brand}} {{model}}</h3>
            <p>Price: ${{price}}</p>
            <a href="/devices/{{_id}}/details" class="btn">Read More</a>
        </article>
        {{else}}
        <p class="no-post">There haven't been any devices posted yet.</p>
        {{/each}}
    </div>
</section>